              <MethodName>chkUseEmailLink_ChangeAction</MethodName>
              <CSharpCodeSnippet>var currentEntity = BindingSource.Current as IOfficeProfile;
        if (currentEntity == null) return;
        currentEntity.UseEmailLink = chkUseEmailLink.Checked;
        if (chkUseEmailLink.Checked)
        {
            txtEmailAddress.ReadOnly = false;
            if (!string.IsNullOrEmpty(txtEmailAddress.Text)) return;
            var user = Sage.SalesLogix.Security.User.GetById("ADMIN");
            var adminEmail = user.UserInfo.Email;
            currentEntity.EmailAddress = adminEmail;
        }
        else
        {
